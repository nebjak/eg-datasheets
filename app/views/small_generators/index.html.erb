<h1>Mali prenosni agregati</h1>
<div class="row">
  <div class="span12">
    <p>
      <%= link_to '<i class="icon-file icon-white"></i> Novi agregat'.html_safe, new_small_generator_path, class: "btn btn-primary" %>
    </p>
  </div>
</div>
<table class="table generators_list">
  <tr>
    <th>Model</th>
    <th>Snaga (max)</th>
    <th>Snaga (cont)</th>
    <th>Motor</th>
    <th>Rezervoar</th>
    <th>Generator</th>
    <th>Panel</th>
    <th></th>
  </tr>

<% @small_generators.each do |small_generator| %>
  <tr>
    <td><%= link_to small_generator.model, small_generator %></td>
    <td><%= small_generator.kva_max %> kVA</td>
    <td><%= small_generator.kva_cont %> kVA</td>
    <td><%= small_generator.motor_proizvodjac %></td>
    <td><%= small_generator.motor_rezervoar %> l</td>
    <td><%= small_generator.generator_proizvodjac %></td>
    <td><%= small_generator.panel %></td>
    <td>
      <%= link_to '<i class="icon-download icon-white"></i> .pdf'.html_safe, small_generator_path(small_generator, format: :pdf), class: "btn btn-info btn-mini", target: "_blank" %>
      <%= link_to '<i class="icon-edit icon-white"></i> Edit'.html_safe, edit_small_generator_path(small_generator), class: "btn btn-warning btn-mini" %>
      <%= link_to '<i class="icon-trash icon-white"></i> Delete'.html_safe, small_generator, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
    </td>
  </tr>
<% end %>
</table>
